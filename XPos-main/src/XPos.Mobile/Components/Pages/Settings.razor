@page "/settings"
@inject NavigationManager Navigation

<div class="d-flex flex-column h-100 bg-light">
    <!-- Header -->
    <div class="bg-white shadow-sm p-4 d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark m-0">
            <i class="bi bi-gear-fill text-primary me-2"></i>Ayarlar
        </h2>
        <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/")'>
            <i class="bi bi-arrow-left me-2"></i>Geri Dön
        </button>
    </div>

    <!-- Content -->
    <div class="container py-4">
        <div class="row g-4">
            <!-- General Settings -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold m-0">Genel Ayarlar</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label class="form-label">Restoran Adı</label>
                            <input type="text" class="form-control" value="XPos Restaurant" disabled>
                        </div>
                         <div class="mb-3">
                            <label class="form-label">Dil</label>
                            <select class="form-select">
                                <option selected>Türkçe</option>
                                <option>English</option>
                            </select>
                        </div>
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                            <label class="form-check-label" for="darkModeSwitch">Karanlık Mod (Otomatik)</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Printer Settings -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h5 class="fw-bold m-0">Yazıcı Ayarları</h5>
                    </div>
                    <div class="card-body p-4">
                         <div class="mb-3">
                            <label class="form-label">Adisyon Yazıcısı</label>
                            <select class="form-select">
                                <option selected>Thermal Printer TCP-100</option>
                                <option>PDF Yazıcı</option>
                            </select>
                        </div>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-printer me-1"></i> Test Yazdır
                        </button>
                    </div>
                </div>
            </div>
             <!-- System Info -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold m-0">Sürüm Bilgisi</h6>
                            <small class="text-muted">v2.1.0-beta</small>
                        </div>
                         <div>
                            <h6 class="fw-bold m-0">Lisans Durumu</h6>
                            <span class="badge bg-success">Aktif</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

