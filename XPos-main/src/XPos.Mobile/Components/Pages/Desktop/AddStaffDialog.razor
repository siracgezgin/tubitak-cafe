@using System.Net.Http.Json
@using MudBlazor
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField T="string" Label="Adı" Required="true" @bind-Value="model.Name" />
            <MudTextField T="string" Label="Soyadı" Required="true" @bind-Value="model.Surname" />
            <MudTextField T="string" Label="Telefon" Required="true" @bind-Value="model.Phone" />
            
            <MudSelect T="string" Label="Rol" Required="true" @bind-Value="model.Role" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="@("Admin")">Yönetici</MudSelectItem>
                <MudSelectItem Value="@("Waiter")">Garson</MudSelectItem>
                <MudSelectItem Value="@("Kitchen")">Mutfak</MudSelectItem>
            </MudSelect>

            <MudTextField T="string" Label="Şifre" InputType="InputType.Text" Required="true" @bind-Value="model.Password" HelperText="Personelin giriş şifresi" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">İptal</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Kaydet</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public StaffDto Staff { get; set; } = null;

    private StaffDto model = new();
    private MudForm form;
    private bool success;

    protected override void OnInitialized()
    {
        if (Staff != null)
        {
            model = new StaffDto
            {
                Id = Staff.Id,
                Name = Staff.Name,
                Surname = Staff.Surname,
                Phone = Staff.Phone,
                Password = Staff.Password,
                Role = Staff.Role
            };
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await form.Validate();
        if (success)
        {
            try
            {
                HttpResponseMessage response;
                if (Staff == null)
                {
                    response = await Http.PostAsJsonAsync("api/staff", model);
                }
                else
                {
                    response = await Http.PutAsJsonAsync($"api/staff/{model.Id}", model);
                }

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Personel kaydedildi", Severity.Success);
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add("İşlem başarısız", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Hata: {ex.Message}", Severity.Error);
            }
        }
    }
}
